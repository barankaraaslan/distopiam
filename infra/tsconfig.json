{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "cdk.out", "cdktf.out"]
}
